{
  "manifest_version": 3,
  "name": "Unofficial zero Tools",
  "version": "1.0",
  "description": "Inoffizielle Erweiterung f√ºr finanzen.net zero. Massendownload von Dokumenten, zeigt Latenzen und hilft bei Limit-Order-Eingabe.",
  "permissions": [
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://*.finanzen.net/*",
    "https://*.finanzen-zero.net/*",
    "https://mein.finanzen-zero.net/*"
  ],
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": "icon-48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.finanzen.net/*",
        "https://*.finanzen-zero.net/*",
        "https://mein.finanzen-zero.net/*"
      ],
      "js": [
        "jszip.min.js",
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ]
}